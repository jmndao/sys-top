{
    "name": "sys-top",
    "productName": "SysTop",
    "version": "1.0.0",
    "description": "App to monitor your system CPU",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "nodemon --exec electron .",
        "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
        "package-win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=false --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"SysTop\"",
        "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=false --out=release-builds"
    },
    "author": "JMNdao",
    "license": "MIT",
    "keywords": [
        "Monitoring CPU",
        "Electron App"
    ],
    "devDependencies": {
        "electron": "^13.1.9",
        "electron-packager": "^15.3.0",
        "nodemon": "^2.0.12"
    },
    "dependencies": {
        "electron-log": "^4.4.1",
        "node-os-utils": "^1.3.5"
    }
}
